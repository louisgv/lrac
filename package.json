{
  "name": "lrc",
  "version": "0.1.1",
  "homepage": "https://louisgv.ga/lrc",
  "repository": "louisgv/lrc",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.4",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/styled-components": "^4.1.19",
    "styled-components": "^4.3.2",
    "styled-system": "^5.1.1"
  },
  "scripts": {
    "prepublish": "babel src -d dist  --ignore __tests__",
    "predeploy": "yarn build",
    "deploy": "npx gh-pages -d build",
    "start": "start-storybook -c .storybook -s public",
    "build": "build-storybook -o build -s public",
    "version": "npx auto-changelog -p && git add CHANGELOG.md",
    "dist": "yarn clean:dist && yarn dist:prod",
    "dist:prod": "tsc -p tsconfig.prod.json --outDir ./dist",
    "clean:build": "npx rimraf ./build",
    "clean:dist": "npx rimraf ./dist"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.1.11",
    "@storybook/addon-links": "^5.1.11",
    "@storybook/react": "^5.1.11",
    "@types/storybook__react": "^4.0.2",
    "babel-loader": "^8.0.6",
    "react-docgen-typescript-loader": "^3.2.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "storybook-styled-components": "^1.1.4",
    "typescript": "3.6.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babelMacros": {
    "styledComponents": {
      "pure": true
    }
  }
}
